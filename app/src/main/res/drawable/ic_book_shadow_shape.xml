<?xml version="1.0" encoding="utf-8"?>
<!--
本来打算用作书的阴影，但是现在不再需要
-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 第一层  上部和左部偏移一定距离-->

    <item
        android:left="3dp"
        android:top="3dp">
        <shape android:shape="rectangle">

            <solid android:color="#000000" />//阴影的颜色，自由配置，看你们UI的追求完美的程度
            <!-- <stroke android:width="1dp" android:color="#808080"/>-->
            <corners android:radius="20dp" />
            <stroke
                android:width="0.7dp"
                android:color="#000000" />////阴影的颜色，自由配置，看你们UI的追求完美的程度
        </shape>
    </item>
    <!-- 第二层 下部和有部偏移一定距离-->
    <item
        android:bottom="3dp"
        android:right="3dp">
        <shape android:shape="rectangle">

            <solid android:color="@color/colorAccent" />
            <!-- <stroke android:width="1dp" android:color="#808080"/>-->
            <corners android:radius="20dp" />
            <stroke
                android:width="0.33dp"
                android:color="@color/colorAccent" />
        </shape>
    </item>

</layer-list>
