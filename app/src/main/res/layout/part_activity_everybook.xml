<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_book_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">
    <!--<TextView
        android:id="@+id/id_tv_book_img"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:text=""
        android:textAlignment="center"
        android:textColor="#000" />-->
    <com.yinglan.shadowimageview.ShadowImageView
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:id="@+id/id_tv_book_img"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@drawable/img_bookshelf_everybook"
        android:text=""
        android:textAlignment="center"
        android:textColor="#000"
         >
    </com.yinglan.shadowimageview.ShadowImageView>
    <TextView
        android:id="@+id/id_tv_book_content"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:textColor="#000000"
        android:text="课本"/>
    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="30dp">
        <TextView
            android:id="@+id/id_book_already_read"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:text="已读%"/>
        <TextView
            android:id="@+id/id_ib_book_etc"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:hint="@string/bookshelf_etc"
            android:layout_toRightOf="@id/id_book_already_read"/>
    </RelativeLayout>

</LinearLayout>