<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_book_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:gravity="center">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_bottom"
        android:layout_below="@+id/cardview_middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="1dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="1dp"

        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="5dp"
        app:cardElevation="1dp"
        app:cardMaxElevation="1dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"

        android:foreground="?android:attr/selectableItemBackground"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/id_tv_book_post"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:src="@drawable/img_bookshelf_everybook"
                android:layout_alignParentLeft="true"
                android:layout_margin="10dp"
                />

            <TextView
                android:id="@+id/id_tv_book_name"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/id_tv_book_post"
                android:layout_toRightOf="@+id/id_tv_book_post"
                android:text="书的名字"
                android:textColor="#99000000"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/id_book_thought_click"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_alignBottom="@+id/id_tv_book_name"
                android:layout_alignTop="@+id/id_tv_book_name"
                android:layout_toRightOf="@+id/id_tv_book_name"
                android:layout_alignParentRight="true"
                android:drawableRight="@drawable/icon_book_go"
                android:text="3"
                android:gravity="right"
                android:padding="1dp"
                android:drawablePadding="1dp"
                android:background="@color/colorRed"
                />
            <TextView
                android:id="@+id/id_tv_thought_time"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_tv_book_name"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/id_tv_book_post"
                android:text="书的名字"
                android:textColor="#99000000"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/id_iv_divider_top"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/white"
                android:layout_below="@+id/id_tv_book_post"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>



</LinearLayout>