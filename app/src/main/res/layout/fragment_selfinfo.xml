<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.shehuan.niv.NiceImageView
        android:id="@+id/id_niv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/img_unlogined"
        app:border_color="@color/colorLiteGray"
        app:border_width="0.5dp"
        app:is_circle="true"
        app:is_cover_src="false"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/id_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_niv"
        android:layout_centerHorizontal="true"
        android:text="点击登录"/>
    <android.support.v7.widget.CardView
        android:id="@+id/cardview_top"
        android:layout_below="@+id/id_tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="1dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="1dp"


        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="5dp"
        app:cardElevation="1dp"
        app:cardMaxElevation="1dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"

        android:foreground="?android:attr/selectableItemBackground"
        >
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"

            android:orientation="horizontal">
            <TextView
                android:id="@+id/id_book_yeuli"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:text="阅历"
                android:gravity="center"/>
            <TextView
                android:id="@+id/id_book_note"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="笔记"
                android:gravity="center"/>
            <TextView
                android:id="@+id/id_book_thought"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="想法"
                android:gravity="center"/>
        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_middle"
        android:layout_below="@+id/cardview_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="1dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="1dp"


        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="5dp"
        app:cardElevation="1dp"
        app:cardMaxElevation="1dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"

        android:foreground="?android:attr/selectableItemBackground"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/id_book_star"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的收藏"
                android:gravity="left|center"
                android:padding="15dp"
                android:drawablePadding="10dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/colorGray"
                android:layout_below="@+id/id_tv_book_post"/>
            <TextView
                android:id="@+id/id_book_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/icon_book_go"
                android:text="浏览记录"
                android:gravity="left|center"
                android:padding="15dp"
                android:drawablePadding="10dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/colorGray"
                android:layout_below="@+id/id_tv_book_post"/>
            <TextView
                android:id="@+id/id_book_plan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/icon_book_go"
                android:text="阅读计划"
                android:gravity="left|center"
                android:padding="15dp"
                android:drawablePadding="10dp"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/colorGray"
                android:layout_below="@+id/id_tv_book_post"/>
            <TextView
                android:id="@+id/id_book_sign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/icon_book_go"
                android:text="每日签到"
                android:gravity="left|center"
                android:padding="15dp"
                android:drawablePadding="10dp"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/colorGray"
                android:layout_below="@+id/id_tv_book_post"/>
            <TextView
                android:id="@+id/id_book_remind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/icon_book_go"
                android:text="通知管理"
                android:gravity="left|center"
                android:padding="15dp"
                android:drawablePadding="10dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cardview_bottom"
        android:layout_below="@+id/cardview_middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="1dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="1dp"

        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="5dp"
        app:cardElevation="1dp"
        app:cardMaxElevation="1dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"

        android:foreground="?android:attr/selectableItemBackground"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/id_book_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/icon_book_go"
                android:text="设置"
                android:gravity="left|center"
                android:padding="15dp"
                android:drawablePadding="10dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>





</RelativeLayout>