<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFF"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:id="@+id/fragment_bookstore2">














    <android.support.v7.widget.CardView
        android:id="@+id/cardview_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#F0EBEB"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        android:foreground="?android:attr/selectableItemBackground"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="vertical">

            <it.neokree.materialtabs.MaterialTabHost
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="top"
                android:id="@+id/bv2"
                android:layout_marginBottom="5dp"
                />
            <android.support.v7.widget.CardView
                android:id="@+id/cardview_book_search"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="1dp"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp"
                app:cardMaxElevation="1dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                android:foreground="?android:attr/selectableItemBackground"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/id_tv_search"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:hint="@string/bookshelf_search"
                        android:textSize="20sp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="4dp"

                        />

                    <TextView
                        android:id="@+id/id_tv_search2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6"
                        android:hint="热门搜索:"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/id_tv_search3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:hint="我在故宫修文物"
                        android:textSize="20sp"
                        />
                </LinearLayout>



            </android.support.v7.widget.CardView>

        </LinearLayout>











    </android.support.v7.widget.CardView>












    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/vp2"
        />
</LinearLayout>

